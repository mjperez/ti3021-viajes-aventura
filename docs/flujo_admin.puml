@startuml Flujo_Admin_Simple
!theme plain

title Flujo del Administrador

start

:Iniciar Sesión (Admin);

:Menú Administrador;

repeat
    switch (Módulo)
        case (Destinos)
            :Listar/Agregar/Editar/Eliminar/Reactivar;
        case (Actividades)
            :Listar/Agregar/Editar/Eliminar/Reactivar;
        case (Paquetes)
            :Listar/Agregar/Editar/Eliminar/Reactivar;
            :Gestionar Actividades del Paquete;
        case (Reservas)
            :Ver/Confirmar/Cancelar;
        case (Usuarios)
            :Ver usuarios y sus reservas;
        case (Políticas)
            :Ver Políticas (Solo Lectura);
        case (Dashboard)
            :Ver Estadísticas y KPI;
        case (Cerrar Sesión)
            break
    endswitch
repeat while (Continuar)

stop

@enduml
